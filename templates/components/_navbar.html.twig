{# navbar.html.twig #}
<nav class="navbar navbar-expand-lg" style="background-color: #FD6C9E;">
    <div class="container">
        <a class="navbar-brand text-white fw-bold d-flex align-items-center me-4" href="{{ path('app_home') }}">
            <img src="{{ asset('image/logo.png') }}" alt="GiftBot" height="40" class="me-2">
            <span>GiftBot 3000</span>
        </a>

        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars text-white fs-4"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            {# Center nav links #}
            <ul class="navbar-nav mx-auto text-center gap-lg-3 gap-2">
                <li class="nav-item">
                    <a class="nav-link text-white px-3 {% if app.request.get('_route') == 'app_home' %}fw-bold{% endif %}" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white px-3 {% if app.request.get('_route') == 'app_gifts' %}fw-bold{% endif %}" href="{{ path('app_gifts') }}">Store</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white px-3 {% if app.request.get('_route') == 'app_giftsearch' %}fw-bold{% endif %}" href="{{ path('app_giftsearch') }}">Recherche</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white px-3 {% if app.request.get('_route') == 'app_about' %}fw-bold{% endif %}" href="{{ path('app_about') }}">À propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white px-3 {% if app.request.get('_route') == 'app_contact' %}fw-bold{% endif %}" href="{{ path('app_contact') }}">Contact</a>
                </li>
            </ul>

            {# Right-side icons #}
            <ul class="navbar-nav ms-auto d-flex flex-row align-items-center gap-3">
                {# Cart #}
                <li class="nav-item position-relative">
                    <a class="nav-link text-white" href="{{ path('app_cart') }}" id="cartDropdown">
                        <i class="fas fa-shopping-cart fs-5"></i>
                    </a>
                </li>

                {# User / Auth #}
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center"
                           href="#" 
                           id="userDropdownMenu" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           data-bs-auto-close="true"
                           aria-expanded="false">
                           <i class="fas fa-user me-1"></i> 
                           <span>{{ app.user.firstName ?? 'Mon Compte' }}</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdownMenu">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_account') }}">
                                    <i class="fas fa-user-circle me-2"></i>Mon Profil
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" 
                           href="#" 
                           id="authDropdown" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           data-bs-auto-close="true"
                           aria-expanded="false">
                            <i class="fas fa-user fs-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="authDropdown">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_login') }}">
                                    <i class="fas fa-sign-in-alt me-2"></i>Connexion
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_register') }}">
                                    <i class="fas fa-user-plus me-2"></i>Inscription
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>