{% extends 'base.html.twig' %}

{% block title %}Register - Gift{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }

        .register-container {
            background: #E487B3;
            border-radius: 1rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 900px;
            width: 100%;
            min-height: 500px;
            display: flex;
        }

        .register-form-section {
            background: #E487B3;
            padding: 3rem 2.5rem;
            flex: 0 0 55%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .register-form-section h1 {
            color: #fff;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: #fff;
            margin-bottom: 0.3rem;
        }

        .form-control {
            border-radius: 2rem;
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
        }

        .btn-register {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid #fff;
            color: #fff;
            border-radius: 2rem;
            padding: 0.75rem 2rem;
            font-weight: 600;
            width: 100%;
            margin-top: 1.5rem;
            transition: all 0.3s ease;
        }

        .btn-register:hover {
            background: #fff;
            color: #E487B3;
        }

        .image-section {
            background: #fff;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .image-placeholder {
            width: 100%;
            height: 200px;
            background: #f8f9fa;
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            color: #6c757d;
            font-size: 1.2rem;
        }

        .image-section h2 {
            color: #333;
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
        }

        @media (max-width: 768px) {
            .register-container {
                flex-direction: column;
                margin: 1rem;
            }

            .image-section {
                display: none;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="register-container">
        <!-- Registration Form -->
        <div class="register-form-section">
            <h1>Create Your Gift Account</h1>

            {{ form_start(registrationForm) }}

            <div class="mb-3">
                {{ form_label(registrationForm.name) }}
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.name) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>


            <button type="submit" class="btn btn-register">Register</button>

            {{ form_end(registrationForm) }}
        </div>

        <!-- Image Section -->
        <div class="image-section">
            <div class="image-placeholder">
                <i class="fas fa-gift fa-3x"></i>
                <span style="margin-left: 1rem;">Gift App</span>
            </div>

            <h2>Already a user?</h2>
            <p>
                <a href="{{ path('admin_login') }}" class="btn btn-outline-primary mt-2">Login Here</a>
            </p>
        </div>
    </div>
{% endblock %}
