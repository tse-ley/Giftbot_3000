{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-pink: hsl(339, 97%, 71%);
            --dark-pink: #c2185b;
            --light-pink: #fde6e6;
            --white: #ffffff;
            --black: #000000;
            --secondary-beige: #f9e4da;
            --font-family-primary: 'inaira-serif', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        body {
            background-color: var(--light-pink);
            font-family: var(--font-family-primary);
        }

        .admin-card {
            background: var(--white);
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .admin-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .btn-admin {
            background-color: var(--primary-pink);
            border: none;
            color: var(--white);
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-admin:hover {
            background-color: var(--dark-pink);
            color: var(--white);
            transform: translateY(-1px);
        }

        .btn-outline-admin {
            border: 2px solid var(--primary-pink);
            color: var(--primary-pink);
            background: transparent;
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-outline-admin:hover {
            background-color: var(--primary-pink);
            color: var(--white);
        }

        .page-title {
            color: var(--dark-pink);
            font-weight: bold;
        }

        .welcome-text {
            color: var(--dark-pink);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title">Admin Dashboard</h1>
                <div>
                    <span class="me-3 welcome-text">Welcome, {{ app.user.email ?? 'admin@example.com' }}</span>
                    <a href="{{ path('app_home') }}" class="btn btn-outline-admin">Home</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card admin-card">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage application users</p>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-admin">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card admin-card">
                <div class="card-body">
                    <h5 class="card-title">Newsletter Management</h5>
                    <p class="card-text">Manage newsletter subscriptions</p>
                    <a href="{{ path('admin_news_letter_index') }}" class="btn btn-admin">Manage Newsletters</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card admin-card">
                <div class="card-body">
                    <h5 class="card-title">Items Management</h5>
                    <p class="card-text">Gifts</p>
                    <a href="{{ path('admin_gift_index') }}" class="btn btn-admin">Manage Items</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}