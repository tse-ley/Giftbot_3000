{% extends 'base.html.twig' %}

{% block title %}Add New Gift{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/giftadd.css') }}">
{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4 custom-card">
        <div class="card-body p-5">
            <h2 class="card-title mb-4 text-center ">Add New Gift</h2>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control custom-input'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control custom-textarea', 'rows': '4'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.price, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control custom-input'}}) }}
                    {{ form_errors(form.price) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.category, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-control custom-input'}}) }}
                    {{ form_errors(form.category) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.stock_quantity, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.stock_quantity, {'attr': {'class': 'form-control custom-input'}}) }}
                    {{ form_errors(form.stock_quantity) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image_url, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.image_url, {'attr': {'class': 'form-control custom-input'}}) }}
                    {{ form_errors(form.image_url) }}
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success btn-lg custom-submit">Add Gift</button>
                </div>
            {{ form_end(form) }}

            <div class="mt-4 text-center">
                <a href="{{ path('admin_gift_index') }}" class="btn btn-outline-secondary custom-back">‚Üê Back to Gift List</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
