{% extends 'base.html.twig' %}

{% block title %}Gift Management - GiftBot 3000{% endblock %}

{% block body %}
<style>
    :root {
        --primary-pink: #fc6ea0;
        --dark-pink: #c2185b;
        --light-pink: #fde6e6;
        --white: #ffffff;
        --black: #000000;
        --secondary-beige: #f9e4da;
    }

    .gift-wrapper {
        margin: 2em auto;
        max-width: 1200px;
        width: 95%;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    /* Hero Header Section */
    .hero-section {
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        border-radius: 25px;
        padding: 40px;
        margin-bottom: 30px;
        box-shadow: 0 15px 40px rgba(252, 110, 160, 0.3);
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 100%;
        height: 200%;
        background: radial-gradient(ellipse, rgba(255,255,255,0.15) 0%, transparent 70%);
        pointer-events: none;
        transform: rotate(-15deg);
    }

    .hero-content {
        position: relative;
        z-index: 2;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .hero-title {
        color: var(--white);
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
        text-shadow: 0 3px 6px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .hero-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.2rem;
        margin: 10px 0 0 0;
        font-weight: 300;
    }

    .hero-actions {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    /* Enhanced Buttons */
    .btn-primary-custom {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: var(--white);
        color: var(--dark-pink);
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(255, 255, 255, 0.3);
        border: 2px solid transparent;
    }

    .btn-primary-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.4);
        color: var(--dark-pink);
        text-decoration: none;
        background: rgba(255, 255, 255, 0.95);
    }

    .btn-secondary-custom {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: rgba(255, 255, 255, 0.2);
        color: var(--white);
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .btn-secondary-custom:hover {
        transform: translateY(-3px);
        background: rgba(255, 255, 255, 0.3);
        color: var(--white);
        text-decoration: none;
        border-color: rgba(255, 255, 255, 0.5);
    }

    /* Stats Dashboard */
    .stats-dashboard {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: var(--white);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 25px rgba(252, 110, 160, 0.15);
        border: 2px solid var(--light-pink);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-pink), var(--dark-pink));
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(252, 110, 160, 0.25);
    }

    .stat-content {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--white);
        font-size: 1.5rem;
        box-shadow: 0 4px 15px rgba(252, 110, 160, 0.3);
    }

    .stat-info h3 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-pink);
    }

    .stat-info p {
        margin: 0;
        color: rgba(194, 24, 91, 0.7);
        font-size: 1rem;
        font-weight: 500;
    }

    /* Enhanced Table Container */
    .table-container {
        background: var(--white);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(252, 110, 160, 0.15);
        border: 2px solid var(--light-pink);
        transition: all 0.3s ease;
    }

    .table-container:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(252, 110, 160, 0.25);
    }

    .table-header {
        background: linear-gradient(135deg, var(--light-pink), rgba(252, 110, 160, 0.1));
        padding: 25px 30px;
        border-bottom: 3px solid var(--primary-pink);
    }

    .table-header h2 {
        margin: 0;
        color: var(--dark-pink);
        font-size: 1.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    /* Premium Table Styling */
    .gifts-table {
        width: 100%;
        border-collapse: collapse;
        background: var(--white);
        margin: 0;
    }

    .gifts-table thead th {
        background: var(--light-pink);
        color: var(--dark-pink);
        font-weight: 700;
        padding: 20px 25px;
        text-align: left;
        border: none;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
    }

    .gifts-table thead th::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 25px;
        right: 25px;
        height: 2px;
        background: linear-gradient(90deg, var(--primary-pink), transparent);
    }

    .gifts-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid rgba(252, 110, 160, 0.1);
        position: relative;
    }

    .gifts-table tbody tr:hover {
        background: rgba(252, 110, 160, 0.05);
        transform: scale(1.01);
        box-shadow: 0 4px 15px rgba(252, 110, 160, 0.1);
    }

    .gifts-table tbody tr:last-child {
        border-bottom: none;
    }

    .gifts-table tbody td {
        padding: 20px 25px;
        border: none;
        color: var(--black);
        font-weight: 400;
        vertical-align: middle;
    }

    /* Enhanced Index Numbers */
    .gift-index {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        color: var(--white);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1rem;
        box-shadow: 0 4px 12px rgba(252, 110, 160, 0.3);
        position: relative;
    }

    .gift-index::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        border-radius: 50%;
        z-index: -1;
        opacity: 0.3;
        transform: scale(0);
        transition: transform 0.3s ease;
    }

    .gifts-table tbody tr:hover .gift-index::before {
        transform: scale(1.2);
    }

    /* Gift Name Styling */
    .gift-name {
        font-weight: 600;
        color: var(--dark-pink);
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .gift-name-icon {
        color: var(--primary-pink);
        font-size: 1.2rem;
    }

    /* Description Styling */
    .gift-description {
        color: rgba(0, 0, 0, 0.7);
        line-height: 1.4;
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    /* Date Styling */
    .gift-date {
        color: rgba(194, 24, 91, 0.8);
        font-family: 'Monaco', 'Menlo', monospace;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .date-icon {
        color: var(--primary-pink);
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .btn-delete {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 18px;
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: var(--white);
        text-decoration: none;
        border-radius: 20px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 3px 12px rgba(231, 76, 60, 0.3);
        border: none;
        cursor: pointer;
    }

    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 18px rgba(231, 76, 60, 0.4);
        background: linear-gradient(135deg, #c0392b, #e74c3c);
        color: var(--white);
        text-decoration: none;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 30px;
        color: rgba(194, 24, 91, 0.6);
    }

    .empty-state-icon {
        font-size: 5rem;
        color: var(--light-pink);
        margin-bottom: 25px;
        display: block;
        animation: float 3s ease-in-out infinite;
    }

    .empty-state h3 {
        color: var(--dark-pink);
        font-size: 1.8rem;
        margin-bottom: 15px;
        font-weight: 700;
    }

    .empty-state p {
        font-size: 1.1rem;
        margin: 0 0 25px 0;
        font-style: italic;
        line-height: 1.5;
    }

    .empty-state-cta {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 15px 30px;
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        color: var(--white);
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(252, 110, 160, 0.3);
    }

    .empty-state-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(252, 110, 160, 0.4);
        color: var(--white);
        text-decoration: none;
    }

    /* Animations */
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .gifts-table tbody tr {
        animation: fadeInUp 0.6s ease forwards;
    }

    .gifts-table tbody tr:nth-child(odd) {
        animation-delay: 0.1s;
    }

    .gifts-table tbody tr:nth-child(even) {
        animation-delay: 0.2s;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .gift-wrapper {
            width: 98%;
            margin: 1em auto;
        }

        .hero-section {
            padding: 25px;
            margin-bottom: 20px;
        }

        .hero-title {
            font-size: 2.2rem;
        }

        .hero-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .hero-actions {
            width: 100%;
        }

        .btn-primary-custom,
        .btn-secondary-custom {
            flex: 1;
            justify-content: center;
        }

        .stats-dashboard {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .gifts-table {
            font-size: 0.9rem;
        }

        .gifts-table thead th,
        .gifts-table tbody td {
            padding: 15px 12px;
        }

        .table-header {
            padding: 20px;
        }

        .gift-description {
            max-width: 200px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 5px;
        }

        .btn-delete {
            font-size: 0.8rem;
            padding: 8px 14px;
        }
    }

    /* Loading animation for stats */
    .stat-loading {
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
</style>

<div class="gift-wrapper">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div>
                <h1 class="hero-title">
                    <i class="fas fa-gift"></i>
