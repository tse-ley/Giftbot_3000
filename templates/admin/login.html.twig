{% extends 'base.html.twig' %}

{% block title %}Welcome back to Gift!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('build/adminlogin.css') }}">
{% endblock %}

{% block body %}
    <div class="login-container">
        <!-- Login Form Section -->
        <div class="login-form-section">
            <h1>Welcome back to Gift !</h1>
            <p class="subtitle">Sign into your account</p>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" id="loginForm">
                <div class="form-group">
                    <label for="inputEmail" class="form-label">Your Email</label>
                    <input type="email"
                           value="{{ last_username }}"
                           name="_username"
                           id="inputEmail"
                           class="form-control"
                           autocomplete="email"
                           required
                           autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password"
                           name="_password"
                           id="inputPassword"
                           class="form-control"
                           autocomplete="current-password"
                           required>
                </div>

                <div class="form-check">
                    <div>
                        <input class="form-check-input"
                               type="checkbox"
                               name="_remember_me"
                               id="remember_me">
                        <label class="form-check-label" for="remember_me">
                            Remember me
                        </label>
                    </div>
                    {# Optional: Add password recovery route if needed #}
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-login" type="submit">
                    Login
                </button>
            </form>

            <div class="divider">
                <span>Instant Login</span>
            </div>

            <div class="social-login">
                <a href="#" class="btn-social">
                    <i class="fab fa-google"></i>
                    Sign in with Google
                </a>
                <a href="#" class="btn-social">
                    <i class="fab fa-facebook-f"></i>
                    Sign in with Facebook
                </a>
            </div>

            <div class="register-link">
                Don't have any account?
                {# Remove or update based on actual route availability #}
                <a href="{{ path('app_register') }}" class="btn">Register Here</a>
            </div>
        </div>

        <!-- Image Section -->
        <div class="image-section">
            <div class="image-placeholder">
                <i class="fas fa-images fa-3x"></i>
                <span style="margin-left: 1rem;">Images</span>
            </div>

            <h2>Searching for the perfect present?</h2>
            <p>
                Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident.
            </p>

            <div class="dots-indicator">
                <div class="dot active"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
