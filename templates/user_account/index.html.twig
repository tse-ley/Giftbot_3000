{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block stylesheets %}
     {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('build/useraccount.css') }}">
{% endblock %}

{% block body %}

<div class="account-wrapper">
    <div class="account-header">Mon Compte</div>

    <div class="user-info">
        <h2>Informations Utilisateur</h2>
        <p><strong>Nom:</strong> {{ user.name }}</p>
        <p><strong>Email:</strong> {{ user.email }}</p>
    </div>

    <div class="orders-section">
    <h2>Mes Commandes</h2>
    <a href="{{ path('app_home') }}" class="back-button">Retour à l'accueil</a>
    {% if orders is not empty %}
    {% for order in orders %}
    <div class="order">
                    <p><strong>ID de la commande:</strong> {{ order.id }}</p>
                    <p><strong>Date:</strong> {{ order.createdAt|date('Y-m-d') }}</p>
                    <p><strong>Total:</strong> €{{ order.total }}</p>
                </div>
            {% endfor %}
        {% else %}
            <p class="no-orders">Vous n'avez pas encore de commandes.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
