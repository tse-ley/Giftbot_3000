{% extends 'base.html.twig' %}

{% block title %}Accueil - GiftBot 3000{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('build/main.css') }}">
    <link rel="stylesheet" href="{{ asset('build/hero.css') }}">
    <link rel="stylesheet" href="{{ asset('build/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('build/footer.css') }}">
{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include 'components/_navbar.html.twig' %}

    <!-- Hero Section -->
        <section class="hero-section text-white text-center">
            <div class="hero-content container">
                <h1 class="display-4 fw-bold">Bienvenue sur GiftBot 3000</h1>
                <p class="lead">Votre Destination Cadeaux Hors du Commun !</p>
            </div>
        </section>

        <!-- Unique Gifts Section (white bg with centered text and button) -->
        <section class="bg-white py-5">
            <div class="container text-center">
                <h2 class="fw-bold mb-4">Des Cadeaux Uniques, Pour des Souvenirs Inoubliables !</h2>
                <p class="mb-4">Chez GiftBot 3000, nous transformons le simple geste d'offrir...</p>
                <p class="mb-5"> Chez GiftBot 3000, nous transformons le simple geste d'offrir en une expérience 
                        magique. Que ce soit pour un anniversaire, une fête, ou juste pour faire plaisir, 
                        notre sélection intelligente de cadeaux saura trouver LE présent qui fera sourire. 
                        Laissez notre "bot cadeautier" vous guider vers des idées uniques, tendance et 
                        personnalisées.</p>
                <a href="{{ path('app_about') }}" class="btn btn-lg rounded-pill text-white" style="background-color: #FF4DA6;">En Savoir Plus</a>
            </div>
        </section>

  

    <!-- Adventure Section -->
    <section class="section-adventure">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">L'Aventure Cadeaux Commence Ici !</h2>
            </div>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="category-card position-relative">
                        <img src="{{ asset('image/wrist-watch-2159351_1920.jpg') }}" alt="Cadeaux Homme">
                        <div class="category-overlay">
                            <div class="category-name">Homme</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="category-card position-relative">
                        <img src="{{ asset('image/perfume-2445617_1920.jpg') }}" alt="Cadeaux Femme">
                        <div class="category-overlay">
                            <div class="category-name">Femme</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="category-card position-relative">
                        <img src="{{ asset('image/mattress-2489615_1920.jpg') }}" alt="Cadeaux Enfants">
                        <div class="category-overlay">
                            <div class="category-name">Enfants</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="category-card position-relative">
                        <img src="{{ asset('image/dogs-5021084_1280.jpg') }}" alt="Cadeaux Animaux">
                        <div class="category-overlay">
                            <div class="category-name">Animaux</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="category-card position-relative">
                        <img src="{{ asset('image/a-book-1760998_1280.jpg') }}" alt="Livres">
                        <div class="category-overlay">
                            <div class="category-name">Livres</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="category-card position-relative">
                        <img src="{{ asset('image/new-year-6920394_1280.jpg') }}" alt="Accessoires">
                        <div class="category-overlay">
                            <div class="category-name">Accessoires</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="#" class="btn btn-custom btn-lg">La Boutique</a>
            </div>
        </div>
    </section>

    <!-- Tech Section -->
    <section class="tech-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="fw-bold mb-4">Chez GiftBot 3000, la tech crée des cadeaux parfaits !</h2>
                    <p class="mb-4">
                        Notre algorithme analyse goûts, budget et occasion pour suggérer des présents 
                        uniques. Des filtres intelligents, des idées personnalisées en un clic. Plus de casse-
                        tête : offrez juste ce qui fera sourire.
                    </p>
                    <button class="btn btn-outline-light btn-lg">Essayez-le</button>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('image/opel-9246352_1920.jpg') }}" alt="Tech Gifts" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h3 class="fw-bold">Newsletter</h3>
                </div>
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Votre email">
                        <button class="btn btn-newsletter" type="button">S'inscrire</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    {% include 'components/_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}